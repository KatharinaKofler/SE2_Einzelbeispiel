<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="199dp"
                android:layout_height="28dp"
                android:text="Gib eine Martikelnummer ein:" />

            <EditText
                android:id="@+id/eingabe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="123dp"
                android:layout_height="22dp"
                android:text="Ausgabe Server:" />

            <TextView
                android:id="@+id/ausgabe_server"
                android:layout_width="171dp"
                android:layout_height="105dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="314dp"
                android:layout_height="31dp"
                android:text="Ausgabe Sortiert nach Größe ohne Primzahlen:" />

            <TextView
                android:id="@+id/ausgabe_berechnung"
                android:layout_width="160dp"
                android:layout_height="29dp" />

            <Button
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senden" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>